<!-- Bootstrap JS and jQuery Links (Required for Modal and Carousel) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    // Get a reference to the "Copy" button and the "shortenedURL" element
    const copyButton = document.getElementById("copyButton");
    const shortenedURLElement = document.getElementById("shortenedURL");

    // Add a click event listener to the "Copy" button
    copyButton.addEventListener("click", function () {
        // Check if shortenedURL is not null or undefined
        if (shortenedURLElement && shortenedURLElement.textContent.trim()) {
            // Create a textarea element to temporarily hold the text
            const textarea = document.createElement("textarea");
            textarea.value = shortenedURLElement.textContent.trim();

            // Append the textarea to the document
            document.body.appendChild(textarea);

            // Select the text in the textarea
            textarea.select();

            // Copy the selected text to the clipboard
            document.execCommand("copy");

            // Remove the textarea from the document
            document.body.removeChild(textarea);

            // Optionally provide feedback to the user
            alert("Shortened URL copied to clipboard!");
        } else {
            alert("Shortened URL is not available to copy.");
        }
    });
</script>
<script src="https://kit.fontawesome.com/1465e7da9e.js" crossorigin="anonymous"></script>
</body>
